<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Materials</th>
      <th>Price</th>
      <th>Height</th>
      <th>Width</th>
      <th>Depth</th>
      <th>Year</th>
      <th>In stock</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.image %></td>
        <td><%= book.materials %></td>
        <td><%= book.price %></td>
        <td><%= book.height %></td>
        <td><%= book.width %></td>
        <td><%= book.depth %></td>
        <td><%= book.year %></td>
        <td><%= book.in_stock %></td>
        <td><%= book.author %></td>
        <td><%= book.category_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
